@model MVCcrudApplication.Models.Employee

@{
    ViewBag.Title = "InsertEmpDetail";
}

<h2>InsertEmpDetail</h2>

@Html.ActionLink("Home", "EmployeeRecord")

@* BeginForm to submit all data from UI to code behind *@
@using (Html.BeginForm("InsertEmpDetail", "Employee"))
{ 

<table class=" table table-inverse">

    <tr>
        <td>@Html.LabelFor(model => model.Name)</td>
        <td>@Html.TextBoxFor(model => model.Name)</td>
    </tr>

    <tr>
        <td>@Html.LabelFor(model => model.Department)</td>
        <td>@Html.TextBoxFor(model => model.Department)</td>
    </tr>

    <tr>
        <td>@Html.LabelFor(model => model.Location)</td>
        <td>@Html.TextBoxFor(model => model.Location)</td>
    </tr>

    <tr>
        <td>@Html.LabelFor(model => model.Salary)</td>
        <td>@Html.TextBoxFor(model => model.Salary)</td>
    </tr>

    <tr>
        <td colspan="2">
            <input id="btnInsertEmp" type="submit" value="Create Employee" class="btn btn-info"/>
        </td>
    </tr>

</table>
}

